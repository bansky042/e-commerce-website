<!-- Example of dynamic category section using EJS -->
<div class="section2">
  <% const mainCategories = [
  { name: 'Fashion', imgFront: 'fashion.jpg', imgBack: 'fashion2.jpg', description: 'Explore Styles' },
  { name: 'Mobile Accessories', imgFront: 'accessories.jpg', imgBack: 'accessories2.jpg', description: 'Explore Beauty' },
  { name: 'Art & Stationery', imgFront: 'art.jpg', imgBack: 'art2.jpg', description: 'Explore the beauty of art' },
  { name: 'Automobiles & Accessories', imgFront: 'car.jpg', imgBack: 'car2.jpg', description: 'Explore new rides' },
  { name: 'Electronics', imgFront: 'electronics.jpg', imgBack: 'electronics2.jpg', description: 'Get electrical appliances now' },
  { name: 'Health & Beauty', imgFront: 'health2.jpg', imgBack: 'health.jpg', description: 'Get healthy skincare' },
  { name: 'Home & Kitchen', imgFront: 'home equipment.jpg', imgBack: 'home euqipment2.jpg', description: 'Explore new home equipments' },
  { name: 'Toys, Kids & Babies', imgFront: 'mobile.jpg', imgBack: 'mobile2.jpg', description: 'Explore new mobile phones' },
  { name: 'Sports & Outdoors', imgFront: 'sport.jpg', imgBack: 'sport2.jpg', description: 'Explore sports wear and gym equipment' }
];
; %>

  <% mainCategories.forEach(cat => { %>
    <div class="section2-icon">
      <a href="/category/<%= encodeURIComponent(cat.name) %>">
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front">
              <img src="images/<%= cat.imgFront %>" alt="<%= cat.name %>" class="category-icon">
              <p class="category-name"><%= cat.name %></p>
            </div>
            <div class="flip-card-back">
              <img src="images/<%= cat.imgBack %>" alt="<%= cat.name %> back" class="category-icon">
              <p class="category-name"><%= cat.description %></p>
            </div>
          </div>
        </div>
      </a>
    </div>
  <% }) %>
</div>


